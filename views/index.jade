extends layouts/home

block content
	.site-wrapper
		.site-wrapper-inner
			.cover-container
				.masthead.clearfix
					.inner
						h3(class="masthead-brand")
							a(href='http://www.thingworx.com')
								img(src="/images/twx_logo.png",  alt='signals image', width='220', height='50')
						nav
							ul(class="nav masthead-nav")
								li.active
									a(href="/") Home
								li
									a(href="/learn") Learn More
								li
									a(href='/actions') Getting Started
								li
									a(href="/glossary") Glossary
				.inner.cover
					h1.cover-heading Thingworx Machine Learning
					p.lead Experimental UI for working with ThingWorx Machine Learning
					
					#homepageButtons
						p
							a.btn.btn-lg.btn-primary(role='button', href='/learn') Learn More
							| &nbsp;
							a.btn.btn-lg.btn-success(role='button', href='/actions') Getting Started
